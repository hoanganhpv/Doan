<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Baitap">

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="521dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="87dp"
                android:layout_height="76dp"
                app:srcCompat="@drawable/ic_lich" />

            <Button
                android:id="@+id/btn_Lichtap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="LỊCH TẬP" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imgTay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/imgtay" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imgVai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/imgvai" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="76dp">

            <ImageButton
                android:id="@+id/imgNguc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/imgnguc" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="76dp">

            <ImageButton
                android:id="@+id/imgChan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/imgchan" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="76dp">

            <ImageButton
                android:id="@+id/imgBung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/imgbung" />
        </TableRow>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>